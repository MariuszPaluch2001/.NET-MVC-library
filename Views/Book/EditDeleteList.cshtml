@model IEnumerable<LibraryManagement.Models.BookModel>

@{
    ViewData["Title"] = "Edycja / usuwanie książek";
}

@if (ViewBag.isSuperUser == "true")
{
    <h1>Usuń/edytuj dane o książkach</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.author)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.publisher)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.user)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.reserved)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.leased)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.author)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.publisher)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.user.login)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.reserved)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.leased)
                    </td>
                    <td>
                        <span>
                            @Html.ActionLink("Edytuj", "Edit", new { id=item.id }, new {@class="btn btn-primary"})
                        </span>
                        <span>
                            @Html.ActionLink("Usuń", "Delete", new { id=item.id }, new {@class="btn btn-danger"})
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}else{
    <p>Nie masz dostepu do tej strony.</p>
}
<div class="margin-top">
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Powrót do strony głównej</a>
</div>