@model IEnumerable<LibraryManagement.Models.Book>

@{
    ViewData["Title"] = "Znajdź książkę";
}

<h1>Znajdź książkę</h1>
<br/>



<div >
    @using (Html.BeginForm("SearchBook", "book", FormMethod.Get))
    {

            @Html.TextBox("searching", null, new {@class="form-control"})
            <br />
            <input type="submit" value="Szukaj" class="form-control" style="max-width:10%;float: right;" />
    }
</div>

<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher)
            </td>
            <td>
                    @Html.ActionLink("Szczegóły", "Details", new { id=item.BookId }, new {@class = "btn btn-primary"})
            </td>
        </tr>
}
    </tbody>
</table>

<div class="margin-top">
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Powrót do strony głównej</a>
</div>