@model IEnumerable<LibraryManagement.Models.Book>

@{
    ViewData["Title"] = "Edycja / usuwanie książek";
}

@if (ViewBag.isSuperUser == "true")
{
    <h1>Usuń/edytuj dane o książkach</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Publisher)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.user)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Reserved)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Leased)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Publisher)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.user.Login)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Reserved)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Leased)
                    </td>
                    <td>
                        @Html.ActionLink("Edytuj", "Edit", new { id=item.BookId, timeStamp=item.TimeStamp }, new {@class="btn btn-primary"})
                    </td>
                    <td>
                         @Html.ActionLink("Usuń", "Delete", new { id=item.BookId }, new {@class="btn btn-danger"})
                    </td>
                </tr>
            }
        </tbody>
    </table>
}else{
    <p>Nie masz dostepu do tej strony.</p>
}
<div class="margin-top">
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Powrót do strony głównej</a>
</div>