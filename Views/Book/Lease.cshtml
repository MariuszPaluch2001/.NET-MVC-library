@model LibraryManagement.Models.BookModel

@{
    ViewData["Title"] = "Książki do wypożyczenia";
}
@if (ViewBag.isSuperUser == "true")
{
    <h1>Wypożycz</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Lease">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="leased" class="control-label"></label>
                    <input asp-for="leased" class="form-control" />
                    <span asp-validation-for="leased" class="text-danger"></span>
                </div>
                <br/>
                <div class="form-group">
                    <input type="submit" value="Zapisz" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}
else{
    <p>Nie masz dostępu do tej strony.</p>
}
<div>
    <a asp-action="Index">Wróć do strony głównej</a>
</div>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
